<h1>Categories</h1>
<div class="container">
  <% @categories.each do |x| %>
    <div id="category" class="col-sm-3 col-md-3 col-lg-3">
        <a href="/parts?category=<%= x.category %>">
          <img id="category_images" src="<%= x.images.first.url %>" alt="">
        </a>
        <p><a href="/parts?category=<%= x.category %>"><%= x.category %></a></p>
        <br> 
    </div>
  <% end %> 
</div>
      



